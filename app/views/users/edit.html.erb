<h1>User info</h1>

<% if @user.errors.any? %>
    <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>Name</div>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <div>Image</div>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <div>Introduction</div>
  <%= f.text_area :introduction %>
  <br><%= f.submit "Update User", class: 'btn btn-secondary' %>
<% end %>



