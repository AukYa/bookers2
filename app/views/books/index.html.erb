<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <% if book.user.image.attached? %>
        <%= link_to user_path(book.user.id) do %>
          <td><%= image_tag book.user.get_image, size: "80x80" %></td>
        <% end %>
      <% else %>
        <td><%= link_to user_path(book.user.id) do %><%= image_tag 'no_image', size: "80x80" %></td>
        <% end %>
      <% end %>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
  