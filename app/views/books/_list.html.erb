<h2>User info</h2>

<% users.each do |user| %>
<table>
    <tbody>
        <tr>
            <td><%= image_tag user.get_image %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
    </tbody>
    <% end %>
</table>

<h2>New book</h2>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>